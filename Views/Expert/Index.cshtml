@model List<ExpertCategoryVM>

<div class="bg-appBgMain w-full h-full">
    <div class="w-full flex flex-col items-center text-appText bg-appCartBg pt-5 pb-2 gap-3">
        <h1 class="text-[1.375rem] text-center font-bold max-w-80">İşletmenizin Tanıtımı için Uzmanlar Yanınızda</h1>
        <img class="w-40" src="~/images/expert/expertsIcon.png" alt="Presentation">
        <p class="text-sm text-center font-normal max-w-80">Destek almak istediğiniz kategoriyi seçin, sizi Esnafa Gelir’e kayıtlı olan uzmanlardan en uygununa yönlendirelim.</p>
    </div>
    <div class="flex flex-col py-11 px-4 gap-3 mb-14 text-appText">
        <h1 class="w-11 text-[1.375rem] text-center font-bold">Uzmanlık Kategorileri</h1>
    
        @foreach(var item in Model)
        {
            @await Html.PartialAsync("_ExpertCards", item)
        }
    
        @await Html.PartialAsync("_ContactUsCard", "Uzmanlar ile ilgili her türlü görüş ve yorumlarınızı bize yazabilirsiniz.")
    </div>
    
    @await Html.PartialAsync("_NavbarPartial", "Expert")
</div>